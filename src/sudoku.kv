#:import SudokuScreen sudoku_ui.SudokuScreen
#:import LevelSelectionScreen sudoku_ui.LevelSelectionScreen
#:import AppScreenManager sudoku_ui.AppScreenManager
#:import PuzzleNumberInput sudoku_ui.PuzzleNumberInput


<NumberSelector>:
    orientation: 'horizontal'


<PuzzleNumberInput>:
    

<SudokuScreen>:
    SudokuBoard:
        id: sudoku_board
        pos_hint: {'center': (0.5, 0.5)}
        size_hint: 0.9, 0.5
    
    NumberSelector:
        sudoku_board: sudoku_board
        sudoku_size: sudoku_board.sudoku_size
        size_hint: 0.9, 0.07 
        pos_hint: {'center': (0.5, 0.1)}


<AppScreenManager>:
    LevelSelectionScreen:
        name: 'level-selection-screen'

        MDLabel:
            halign: 'center'
            pos_hint: {'center': (0.5, 0.8)}
            size_hint_x: 0.9
            text: 'This is a Simple sudoku app with 10000 puzzles\n\nIt does not maintain any progress of your puzzles as of now\n\n\nTo play please enter a puzze number between 1 and 10000'

        PuzzleNumberInput:
            pos_hint: {'center': (0.5, 0.5)}
            size_hint_x: 0.6
            hint_text: 'sudoku number'
            on_text_validate: self.parent.enter_level(self.text)
            

    SudokuScreen:
        name: 'sudoku-screen'


